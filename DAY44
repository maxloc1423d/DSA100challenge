class Solution {
    public int countSegments(String s) {
       String str=s.trim();
       if(str.equals("")){
           return 0;
       }
       String []str2=str.split("\\s+"); // split method is used for the convert the String into Array with in string every word which is seprated by tap or space is storg in Array 
       int x=str2.length;
       return x;
    }
}
